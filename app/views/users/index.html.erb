<h1 align="center">All Alpha Bloggers</h1>
<div align="center">
<%= will_paginate @users %>
<%= @users.each do |user| %>


    <div class="alert alert-secondary" role="alert">
    <ul class="listing">
    <div class="row">


       <div class="col-md-12 col-md-offset-12">
         <%= link_to gravatar_for(user), user_path(user) %>
         <div class="article-title">
           <%= link_to user.username, user_path(user)%>

       </div>
         
      <%= pluralize(user.articles.count, "article") if user.articles%>
      <% if logged_in? and current_user.admin?%>
            <li><%= link_to "Delete this user", user_path(user), method: :delete, 
            data: {confirm: "Arw you sure you want to delete the user and all their articles?"}%></li>
      <% end %>

        </div>
    </div>
    </div>
</ul>
<% end %>

<%= will_paginate @users %>

</div>